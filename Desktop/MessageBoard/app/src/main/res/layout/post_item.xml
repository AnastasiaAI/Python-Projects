<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">

    
    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/post_image"
        android:layout_height="200dp" />



    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/post_title"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/post_image"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/ic_thumb_down"
        android:drawablePadding="5dp"
        android:id="@+id/tv_dislikes"
        android:layout_alignBaseline="@+id/post_title"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/ic_thumb_up"
        android:drawablePadding="5dp"
        android:id="@+id/tv_likes"
        android:layout_toLeftOf="@+id/tv_dislikes"
        android:layout_alignBaseline="@+id/post_title"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/post_distance"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/post_title"
        android:layout_height="wrap_content" />

    
</RelativeLayout>